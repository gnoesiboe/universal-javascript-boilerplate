{
    "name": "universal",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "start": "concurrently --kill-others --prefix \"[{name}]\" -n \"ServerBuildWatch,ServerRun\" --c \"yellow.bold,cyan.bold\" \"npm run server:build:watch\" \"npm run server:run:watch\"",
        "server:run:watch": "wait-on dist/server/bundle.js && nodemon dist/server/bundle.js -w dist/server/bundle.js",
        "server:build:watch": "webpack --watch --config webpack.config.server.js --mode=development",
        "prettify": "prettier --write 'src/**/*.{js,jsx,ts,tsx,json,css,scss,md}'"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "body-parser": "^1.18.3",
        "compression": "^1.7.3",
        "express": "^4.16.4",
        "jsonwebtoken": "^8.5.0",
        "passport": "^0.4.0",
        "passport-jwt": "^4.0.0",
        "passport-local": "^1.0.0"
    },
    "devDependencies": {
        "@types/compression": "0.0.36",
        "@types/express": "^4.16.1",
        "@types/jsonwebtoken": "^8.3.0",
        "@types/morgan": "^1.7.35",
        "@types/passport": "^1.0.0",
        "@types/passport-jwt": "^3.0.1",
        "@types/passport-local": "^1.0.33",
        "concurrently": "^4.1.0",
        "husky": "^1.3.1",
        "lint-staged": "^8.1.4",
        "morgan": "^1.9.1",
        "nodemon": "^1.18.10",
        "prettier": "1.16.4",
        "ts-loader": "^5.3.3",
        "typescript": "^3.3.3333",
        "wait-on": "^3.2.0",
        "webpack": "^4.29.5",
        "webpack-cli": "^3.2.3"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
            "prettier --write",
            "git add"
        ]
    }
}
